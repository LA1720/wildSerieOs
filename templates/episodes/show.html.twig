{% extends "base.html.twig" %}

{% block title %}
    {{episode.title}}
{% endblock title %}


{% block body %}
    
<div class="media">
    <img src="{{ program.poster }}" alt="{{ program.title }}">
    <div class="media-body">
        <h1>{{ program.title }}</h1>
        <h3>Episode : {{episode.title}}</h3>
        <h2>
            Season : {{ season.number }} 
        </h2>
        <p>{{ episode.synopsis}}</p>
    </div>
</div>
<a href="{{ path("program_show", {id: program.id} ) }}">Retour a la liste des saisons</a>

{% endblock body %}