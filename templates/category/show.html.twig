{% extends "base.html.twig" %}

{% block title %}
    {{ category.name }}
{% endblock title %}

{% block body %}
    {% for program in programs %}
    <div class="media">
        <a href="{{path('program_show', {id: program.id})}}"><img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster"></a>
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Cat√©gorie : {{ program.category.name }}</p>
        </div>
    </div>
    
    {% endfor %}
    <a href="{{ path('category_index') }}">Retour a la liste des programmes </a>
{% endblock body %}