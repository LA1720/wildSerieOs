{% extends "base.html.twig" %}
{% block title %}Série #{{ program.id }}{% endblock title %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            {% for season in seasons %}
                <ul>
                    <a href="{{ path('program_season_show', {'program_id': program.id, 'season_id': season.id}) }}"><li>Season {{ season.number }} {{ season.year }}</li></a>
                </ul>
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('program_home') }}">Retour a la liste des programmes </a>
{% endblock body %}